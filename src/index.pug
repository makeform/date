div
  .form-group(plug="widget",ld="base")
    div(ld="display",data-display="block")
      label(ld="label")
      span.text-danger.ml-2(ld="is-required") *
    .text-sm.text-muted(ld="display", data-display="block"): div(ld="desc", style="margin:-.6em 0 .7em")
    input.form-control.m-edit(type="text",ld="input")
    .m-view: div(ld="content")
  style(type="text/css"): :stylus
    .flatpickr-wrapper
      display: block
    .m-inline .flatpickr-wrapper
      display: inline-block
  script(type="@plotdb/block"): include:lsc index.ls
